{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{#author}}
{{!-- Everything inside the #author tags pulls data from the author --}}

{{> "site-nav"}}

{{> header background=feature_image}} {{!--Special header.hbs partial to generate the <header> tag--}}
<div class="container">
    <div class="row center">
        {{#if profile_image}}
        <img class="big-author-profile-image" src="{{profile_image}}" alt="{{name}}" />
        {{/if}}
        <h1 class="site-title">{{name}}</h1>
        {{#if bio}}
        <h5 class="author-bio">{{bio}}</h5>
        {{/if}}
        <div class="author-meta">
            {{#if location}}
            <span>{{location}}</span>
            <span class="bull">&bull;</span>
            {{/if}}
            <span>{{plural ../pagination.total empty='No posts' singular='% post' plural='% posts'}} </span>
            <span class="bull">&bull;</span>

            {{#if website}}
            <a href="{{website}}" target="_blank" rel="noopener"><i class="fas fa-globe"></i></a>
            {{/if}}
            {{#if twitter}}
            <a href="{{twitter_url}}" title="Twitter" target="_blank" rel="noopener"><i class="fab fa-twitter"></i></a></li>
            {{/if}}
            {{#if facebook}}
            <a href="{{facebook_url}}" title="Facebook" target="_blank" rel="noopener"><i class="fab fa-facebook-f"></i></a>
            {{/if}}
            <a href="https://feedly.com/i/subscription/feed/{{url absolute="true"}}rss/" target="_blank"
                rel="noopener"><i class="fas fa-rss"></i></a>
        </div>
    </div>

{{/author}}

    {{!-- The main content area --}}
    <div class="post-feed row">
        {{#foreach posts}}

        {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
        {{> "post-card"}}

        {{/foreach}}
    </div>
</div>